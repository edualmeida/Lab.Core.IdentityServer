@page
@using Lab.Core.IdentityServer.Pages.Manage.Register
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    var btnName = Model.IsEdit ? "Register" : "Save";
    var readonlyTag = Model.IsEdit ? "readonly" : null;
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <input type="hidden" asp-for="Input.UserId" />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <label asp-for="Input.Email">Email</label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" readonly="@(Model.IsEdit)" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.SelectedRole">Role</label>
                <select asp-for="Input.SelectedRole" asp-items="Model.Roles" class="form-control">
                </select>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.FullName">Full Name</label>
                <input asp-for="Input.FullName" class="form-control" autocomplete="fullname" aria-required="true" placeholder="Full Name" maxlength="300"/>
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.BirthDate"></label>
                <input asp-for="Input.BirthDate" class="form-control" aria-required="true"/>
                <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.Address1">Address</label>
                <input asp-for="Input.Address1" class="form-control" autocomplete="address1" aria-required="true" placeholder="Address line 1"/>
                <span asp-validation-for="Input.Address1" class="text-danger"></span>
                <input asp-for="Input.Address2" class="form-control" autocomplete="address2" placeholder="Address line 2 (optional)"/>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.City">City</label>
                <input asp-for="Input.City" class="form-control" autocomplete="city" placeholder="City"/>
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.County">County</label>
                <input asp-for="Input.County" class="form-control" autocomplete="county" placeholder="County"/>
                <span asp-validation-for="Input.County" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.PostalCode">EIR Code</label>
                <input asp-for="Input.PostalCode" class="form-control" autocomplete="postalcode" placeholder="EIR Code"/>
                <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.Phone1">Phone</label>
                <input asp-for="Input.Phone1" class="form-control" autocomplete="phone" placeholder="Phone" />
                <span asp-validation-for="Input.Phone1" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">@btnName</button>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h3>Use another service to register.</h3>
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">article
                            about setting up this ASP.NET application to support logging in via external services</a>.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
